<Window x:Class="Converti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converti"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="370">
    <Grid Margin="0,0,2,-1">
        <ComboBox Name="scelta" HorizontalAlignment="Left" Margin="35,75,0,0" VerticalAlignment="Top" Width="130" Height="30">
            <ComboBoxItem>Decimale</ComboBoxItem>
            <ComboBoxItem>Binario</ComboBoxItem>
        </ComboBox>
        <TextBox Name="txt_variabile" HorizontalAlignment="Left" Height="30" Margin="185,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label Content="Scegliere la base" HorizontalAlignment="Left" Margin="35,44,0,0" VerticalAlignment="Top" Width="130"/>
        <Label Content="Inserisci numero da convertire" HorizontalAlignment="Left" Margin="185,44,0,0" VerticalAlignment="Top" Width="170"/>
        <Button Content="Converti" HorizontalAlignment="Left" Margin="125,150,0,0" VerticalAlignment="Top" Width="105" Height="37" Click="ButtonConverter"/>
        <TextBox Name="txt_risultato" HorizontalAlignment="Left" Height="100" Margin="55,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
    </Grid>

</Window>
